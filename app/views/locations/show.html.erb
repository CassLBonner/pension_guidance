<% content_for(:page_title, "#{@location.name} - Pension Wise") %>
<% content_for(:meta_description, "Find out the address, booking hours and how to book a Pension Wise appointment at the #{@location.name}") %>

<h1 class="t-name"><%= @location.name %></h1>

<h2 class="heading-small">Address</h2>
<div class="t-address"><%= simple_format(@location.address) %></div>

<h2 class="heading-small">How to book</h2>
<p>Call <strong class="t-phone"><%= @location.phone %></strong>.</p>
<p>Tell the operator that you want to book a Pension Wise appointment at <%= @location.name %>.</p>
<p>You can also book in person by visiting a Citizens Advice bureau near you.</p>

<% unless @location.hours.blank? %>
  <h3 class="heading-small">Booking hours</h3>
  <div class="t-hours"><%= simple_format(@location.hours) %></div>
<% end %>

